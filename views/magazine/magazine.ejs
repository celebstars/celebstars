<!DOCTYPE html>
<html>

<head>
	<title>auto horizontal scroll</title>
	<meta charset="utf-8">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
  <style>
		.auto_slide_container_body {
			box-sizing: border-box;
			margin: 0;
		}

		.auto_slide_container {
      box-sizing: border-box;
			margin: 0;
			width: 100vw;
			height: 60vh;
			min-height: 180px;
			max-height: 320px;

		}

		.carousel_continer {
			max-width: 60%;
			height: inherit;
			min-height: inherit;
			max-height: inherit;
			border-radius: 1em;
			padding: 8px;
			margin: 0 auto;
			position: relative;

      background-color: #000;
		}

		.rolling_wrap {
			border-radius: 1em;
			position: relative;
			width: 100%;
			height: inherit;
			min-height: inherit;
			max-height: inherit;
			margin: auto;
			overflow: hidden;
		}

		.content {
			position: absolute;
			width: 20rem;
			height: 100%;
			margin: 0;
			overflow: hidden;
		}

		.content:hover {
      text-decoration: none;
		}

    .content:hover::before {
      width: 100%;
      height: 100%;
      content: '모델 정보 보기';
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 1.25rem;
      color: #fff;
    }

		.content img {
			width: 100%;
			height: 100%;
			border-radius: 10px;
		}
	</style>
</head>

<body class="auto_slide_container_body">
	<section class="auto_slide_container">
		<article class="carousel_continer">
			<div class="rolling_wrap">
				<a class="content" href="http://49.50.173.251:8000/choiseoah"><img src="../../static/img/artistImg/choiseoah/main0.jpg" /></a>
				<a class="content" href="http://49.50.173.251:8000/hannana"><img src="../../static/img/artistImg/hannana/main1.jpg" /></a>
				<a class="content" href="http://49.50.173.251:8000/jangmikwan"><img src="../../static/img/artistImg/jangmikwan/main1.jpg" /></a>
				<a class="content" href="http://49.50.173.251:8000/kimbaekjin"><img loading='lazy' src="../../static/img/artistImg/kimbaekjin/main0.jpeg" /></a>
				<a class="content" href="http://49.50.173.251:8000/kimtaehoon"><img loading='lazy' src="../../static/img/artistImg/kimtaehoon/main0.jpg" /></a>
				<a class="content" href="http://49.50.173.251:8000/parkkwanwoo"><img loading='lazy' src="../../static/img/artistImg/parkkwanwoo/main0.jpeg" /></a>
				<a class="content" href="http://49.50.173.251:8000/parkwhite"><img loading='lazy' src="../../static/img/artistImg/parkwhite/main0.jpg" /></a>
			</div>
		</article>

	</section>
	<script>
		let banner_left = 0
		let img_cnt = 0
		let first = 1
		let last = null
		let interval = null
    
    const mouseHover = () => {$(".content").hover(
      () => { stopAction() },
      () => { startAction() }
    )}

		$(document).ready(function () {
			$(".rolling_wrap a").each(function () {
				$(this).css("left", banner_left)
				banner_left += $(this).width() + 5
				$(this).attr("id", "content" + (++img_cnt))
			})
			last = img_cnt
			startAction()
			mouseHover()
		})

		function startAction() {
			interval = setInterval(function () {
				$(".rolling_wrap a").each(function () {
					$(this).css("left", $(this).position().left - 1)
				})

				var first_content = $("#content" + first)
				var last_content = $("#content" + last)

				if (first_content.position().left < "-" + $(first_content).width()) {
					first_content.css("left", last_content.position().left + last_content.width() + 5)
					first++
					last++
					if (last > img_cnt) { last = 1 }
					if (first > img_cnt) { first = 1 }
				}
			}, 20)
		}

		function stopAction() {
			clearInterval(interval)
		}

	</script>
</body>

</html>